<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/grey_medium_dark" android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="0.8">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:padding="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
        <TextView android:id="@+id/txtMensaje" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp"/>
        <ProgressBar android:theme="@style/AppTheme.ProgressBar" android:id="@+id/progressBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:indeterminateTint="@color/red_medium_light" style="?android:attr/progressBarStyle"/>
        <Button android:id="@+id/btnVolver" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="15dp" android:text="Volver"/>
    </LinearLayout>
</RelativeLayout>
