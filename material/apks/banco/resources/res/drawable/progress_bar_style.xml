<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
            <stroke android:width="1dp" android:color="@color/red_light"/>
            <solid android:color="@color/red_light"/>
            <gradient android:startColor="@color/red_light" android:endColor="@color/red_light" android:angle="270" android:centerY="0.75" android:centerColor="@color/red_light"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
                <stroke android:width="1dp" android:color="@color/red_medium_dark"/>
                <solid android:color="@color/red_medium_dark"/>
                <gradient android:startColor="@color/red_medium_dark" android:endColor="@color/red_medium_dark" android:angle="270" android:centerY="0.75" android:centerColor="@color/red_medium_dark"/>
            </shape>
        </clip>
    </item>
</layer-list>
