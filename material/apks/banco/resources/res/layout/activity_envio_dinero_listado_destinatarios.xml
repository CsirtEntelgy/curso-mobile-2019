<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/idListadoDestinatariosView" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/linearLayoutSearchText" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentTop="true">
            <ar.com.santander.rio.mbanking.view.ClearableEditText android:id="@+id/F12_06_inp_searchText" android:paddingLeft="40dp" android:layout_width="match_parent" android:layout_height="32dp" android:layout_marginLeft="9dp" android:layout_marginRight="9dp" android:hint="@string/ID2008_ENVEFECT_TXB_BUSDEST" android:lines="1" android:singleLine="true" android:maxLength="64" android:layout_centerVertical="true" android:inputType="text" app:xcolor="@color/grey_medium_light" style="@style/generic_search_input"/>
            <ImageView android:id="@+id/F12_06_img_searchIcon" android:layout_width="14dp" android:layout_height="14dp" android:layout_marginLeft="10dp" android:src="@drawable/ic_search" android:layout_alignLeft="@+id/F12_06_inp_searchText" android:layout_centerVertical="true" android:contentDescription=""/>
        </RelativeLayout>
        <View android:id="@+id/search_separator" android:layout_below="@+id/linearLayoutSearchText" style="@style/SeparatorSectionTitle"/>
        <RelativeLayout android:id="@+id/F12_06_rll_listadoDestinatarios" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/search_separator">
            <ListView android:id="@+id/F12_06_lst_listaDestinatarios" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@color/grey_medium_light" android:dividerHeight="1dp" android:choiceMode="singleChoice" android:layout_toLeftOf="@+id/F12_06_lnl_indice" android:layout_above="@+id/F12_06_btn_seleccionarDestinatario" android:layout_alignParentTop="true"/>
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/F12_06_lnl_indice" android:layout_width="17dp" android:layout_height="match_parent" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_above="@+id/F12_06_btn_seleccionarDestinatario" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
            <Button android:enabled="false" android:id="@+id/F12_06_btn_seleccionarDestinatario" android:text="@string/ID2009_ENVEFECT_BTN_SELECDEST" android:singleLine="true" android:layout_alignParentBottom="true" android:textAllCaps="false" style="@style/generic_boton_disable"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/F12_06_rll_listadoDestinatariosFiltroVacio" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/search_separator">
            <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="15dp" android:textColor="@color/grey_medium_dark" android:gravity="center" android:id="@+id/F12_06_lbl_listadoFiltroVacio_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="125dp" android:text="@string/ID2013_ENVEFECT_LBL_MENSAJE_1" android:lineSpacingExtra="3dp" fontPath="fonts/OpenSans-Light.otf"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/F12_06_lnl_listadoDestinatariosNombreFiltroVacio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/F12_06_lbl_listadoFiltroVacio_1" android:layout_centerHorizontal="true">
                        <TextView android:textSize="15dp" android:textColor="@color/grey_medium_dark" android:gravity="center_horizontal" android:id="@+id/F12_06_lbl_listadoFiltroVacio_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginRight="18dp" android:text="@string/ID2013_ENVEFECT_LBL_MENSAJE_2" android:lineSpacingExtra="3dp" fontPath="fonts/OpenSans-Light.otf"/>
                    </LinearLayout>
                    <TextView android:textSize="15dp" android:textColor="@color/grey_medium_dark" android:gravity="center" android:id="@+id/F12_06_lbl_listadoFiltroVacio_3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:text="@string/ID2014_ENVEFECT_LBL_PREGUNTA" android:layout_below="@+id/F12_06_lnl_listadoDestinatariosNombreFiltroVacio" fontPath="fonts/OpenSans-Light.otf"/>
                    <Button android:id="@+id/F12_06_btn_nuevoDestinarioFiltroVacio" android:text="@string/ID2015_ENVEFECT_BTN_NUEVDEST" android:layout_below="@+id/F12_06_lbl_listadoFiltroVacio_3" android:textAllCaps="false" style="@style/generic_boton_rojo"/>
                    <Button android:id="@+id/F12_06_btn_nuevoDestinarioDesdeContactosFiltroVacio" android:text="@string/ID2032_ENVIARDINERO_BTN_INCDESDECONT" android:layout_below="@+id/F12_06_btn_nuevoDestinarioFiltroVacio" android:textAllCaps="false" style="@style/generic_boton_rojo"/>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/F12_06_rll_listadoDestinatariosVacio" android:background="@color/grey_light" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/search_separator">
            <ImageButton android:id="@+id/F12_06_img_adicionar" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="90dp" android:layout_marginTop="70dp" android:src="@mipmap/ic_add_big" android:layout_alignParentTop="true" android:contentDescription=""/>
            <TextView android:textSize="15dp" android:textColor="@color/grey_medium_dark" android:gravity="center" android:id="@+id/F12_06_lbl_listadoVacio" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="70dp" android:text="@string/ID2038_ENVEFECT_LBL_MENSAGENDA" android:layout_below="@+id/F12_06_img_adicionar" android:lineSpacingExtra="3dp" fontPath="fonts/OpenSans-Bold.otf"/>
            <TextView android:textSize="15dp" android:textColor="@color/grey_medium_dark" android:gravity="center" android:id="@+id/F12_06_lbl_incorporaDestinatario" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/ID2039_ENVEFECT_LBL_INCORDEST" android:layout_below="@+id/F12_06_lbl_listadoVacio" android:lineSpacingExtra="3dp" fontPath="fonts/OpenSans-Light.otf"/>
            <Button android:id="@+id/F12_06_btn_nuevoDestinarioVacio" android:text="@string/ID2035_ENVIARDINERO_BTN_NUEVODEST" android:layout_above="@+id/F12_06_btn_nuevoDestinarioDesdeContactosVacio" android:textAllCaps="false" style="@style/generic_boton_rojo"/>
            <Button android:id="@+id/F12_06_btn_nuevoDestinarioDesdeContactosVacio" android:text="@string/ID2016_ENVEFECT_BTN_INCDATOS" android:layout_alignParentBottom="true" android:textAllCaps="false" style="@style/generic_boton_rojo"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
