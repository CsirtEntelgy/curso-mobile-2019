<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/wrapperRow" style="@style/RowInfiniteScroll">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <ar.com.santander.rio.mbanking.view.DateView android:textSize="@dimen/text_size_row_max" android:gravity="left" android:id="@+id/vDateTransaction" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3" style="@style/CellInfiniteScroll"/>
        <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <LinearLayout android:orientation="vertical" android:layout_width="0px" android:layout_height="wrap_content" android:layout_weight="8">
            <TextView android:textSize="@dimen/text_size_row_max" android:gravity="left" android:id="@+id/vCompDesc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" style="@style/CellInfiniteScroll"/>
            <TextView android:textSize="@dimen/text_size_row_max" android:gravity="left" android:id="@+id/vCompId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" style="@style/CellInfiniteScroll"/>
        </LinearLayout>
        <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <ar.com.santander.rio.mbanking.view.AmountView android:gravity="right" android:id="@+id/vAmountTransaction" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="4" app:maxTextSize="@dimen/text_size_row_max" app:minTextSize="@dimen/text_size_row_min" style="@style/CellInfiniteScroll"/>
        <LinearLayout android:gravity="right" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/wrapperArrow" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_small"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
