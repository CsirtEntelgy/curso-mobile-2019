<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/wrapperRow" android:layout_marginTop="@dimen/general_margin" style="@style/RowInfiniteScroll">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <ar.com.santander.rio.mbanking.view.DateView android:gravity="left" android:layout_gravity="center_vertical" android:id="@+id/vDateTransaction" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="2.5" style="@style/generic_list_data_column2_bottom_text"/>
        <TextView android:gravity="left" android:layout_gravity="center_vertical" android:id="@+id/vConceptTransaction" android:layout_width="0px" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:singleLine="true" android:layout_weight="6" style="@style/generic_list_data_column3"/>
        <ar.com.santander.rio.mbanking.view.AmountView android:gravity="right" android:layout_gravity="center_vertical" android:id="@+id/vAmountTransaction" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="4" app:maxTextSize="@dimen/text_size_row_max" app:minTextSize="@dimen/text_size_row_min" style="@style/generic_list_data_column3"/>
        <LinearLayout android:gravity="right" android:layout_gravity="right" android:orientation="horizontal" android:id="@+id/wrapperArrow" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_small"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
