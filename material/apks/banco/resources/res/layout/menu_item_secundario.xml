<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/menu_item_desconectar" android:background="@color/grey_dark" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="left" android:orientation="horizontal" android:id="@+id/layout_menu_item_desconectar" android:layout_width="match_parent" android:layout_height="60dp" android:weightSum="10">
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="8">
            <View android:background="@color/red_light" android:visibility="invisible" android:layout_width="8dp" android:layout_height="match_parent"/>
            <TextView android:layout_gravity="center" android:id="@+id/desconectar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/ID12_PRIVATEMENU_BTN_LOGOUT" style="@style/generic_menu_item_secundario"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2">
            <ImageView android:id="@+id/rightRow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:src="@drawable/ic_arrow_small"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/grey_medium_light" android:layout_width="match_parent" android:layout_height="2px"/>
</LinearLayout>
