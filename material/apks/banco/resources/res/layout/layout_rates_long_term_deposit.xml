<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/F10_02_rll_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
                <TextView android:id="@+id/vTitle" android:layout_marginLeft="18dp" android:layout_marginTop="18dp" android:layout_marginRight="18dp" android:layout_marginBottom="12dp" android:text="@string/ID3043_TASAS_LBL_TIT" style="@style/generic_title"/>
                <View style="@style/SeparatorSectionTitle"/>
            </LinearLayout>
            <RelativeLayout android:id="@+id/F10_02_rll_subheader" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="20dp" android:layout_marginRight="15dp" android:layout_marginBottom="12dp" android:layout_below="@+id/F10_02_rll_header">
                <LinearLayout android:orientation="vertical" android:id="@+id/F10_02_lnl_infoPlazoFijo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/F10_02_lnl_cambiarMoneda" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
                    <TextView android:id="@+id/F10_02_lbl_tipoPlazoFijo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/IDXXX_F10_XX_TRADICIONAL_PESOS" style="@style/generic_account_selector"/>
                    <TextView android:textSize="13dp" android:textColor="@color/generic_black" android:id="@+id/F10_02_lbl_montoMinimo" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/ID3044_TASAS_LBL_MONTOMIN" style="@style/generic_fontLight"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/F10_02_lnl_cambiarMoneda" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true">
                    <TextView android:layout_gravity="top" android:id="@+id/F10_02_lbl_cambiar" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:text="@string/ID3045_TASAS_LBL_CAMBIAR" style="@style/generic_list_data_column2"/>
                    <ImageView android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:src="@drawable/arrow_right" android:cropToPadding="false"/>
                </LinearLayout>
            </RelativeLayout>
            <View android:id="@+id/F10_02_separador2" android:layout_below="@+id/F10_02_rll_subheader" style="@style/SeparatorSection"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/F10_02_tbl_ratesHeaders" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/F10_02_separador2">
                <TextView android:gravity="center_horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="12dp" android:text="@string/ID3046_TASAS_LBL_PLAZOMIN" android:layout_weight="1" style="@style/generic_list_data_column2"/>
                <View android:background="@color/grey_light" android:layout_width="1dp" android:layout_height="match_parent"/>
                <TextView android:gravity="center_horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="12dp" android:text="@string/ID3047_TASAS_LBL_TASA" android:layout_weight="1" style="@style/generic_list_data_column2"/>
            </LinearLayout>
            <View android:id="@+id/F10_02_separador3" android:layout_below="@+id/F10_02_tbl_ratesHeaders" style="@style/SeparatorSection"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/vgWrapperRatesLongTermDeposit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/F10_02_separador3"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
