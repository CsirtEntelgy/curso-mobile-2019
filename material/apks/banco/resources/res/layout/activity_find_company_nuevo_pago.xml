<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/lnlTittle" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@+id/F06_05_LBL_TITULO" android:layout_marginLeft="18dp" android:layout_marginTop="18dp" android:layout_marginRight="18dp" android:layout_marginBottom="18dp" android:text="@string/IDX49_PAGO_SERVICIO_LBL_NUEVO_PAGO" android:layout_alignParentTop="true" style="@style/generic_title"/>
        <View android:id="@+id/F06_05_TITUlO_SEPARADOR" android:layout_below="@+id/F06_05_LBL_TITULO" android:layout_alignParentTop="true" style="@style/SeparatorSectionTitle"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/F06_05_CUADRO_BUSQUEDA" android:layout_width="match_parent" android:layout_height="50dp" android:layout_below="@+id/lnlTittle">
        <ar.com.santander.rio.mbanking.view.ClearableEditText android:id="@+id/F06_05_INP_CUADRO_BUSQUEDA" android:paddingLeft="32dp" android:layout_width="match_parent" android:layout_height="32dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:hint="@string/IDX50_PAGO_SERVICIO_EDT_BUSCAR" android:lines="1" android:singleLine="true" android:maxLength="64" android:layout_centerVertical="true" android:inputType="textNoSuggestions" style="@style/generic_search_input"/>
        <ImageView android:id="@+id/F06_05_IMG_CUADRO_BUSQUEDA" android:layout_width="13dp" android:layout_height="13dp" android:layout_marginLeft="10dp" android:src="@drawable/ic_search" android:layout_alignLeft="@+id/F06_05_INP_CUADRO_BUSQUEDA" android:layout_centerVertical="true" android:importantForAccessibility="no"/>
    </RelativeLayout>
    <View android:id="@+id/search_separator" android:layout_below="@+id/F06_05_CUADRO_BUSQUEDA" style="@style/SeparatorSectionTitle"/>
    <TextView android:textSize="15sp" android:textColor="@color/grey_medium_light" android:id="@+id/F06_05_LBL_DESCRIPCION" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="18dp" android:layout_marginTop="16dp" android:layout_marginRight="18dp" android:layout_marginBottom="12dp" android:layout_above="@+id/F06_05_BTN_ESCANEAR" android:layout_below="@+id/search_separator" android:layout_alignParentLeft="true" android:lineSpacingExtra="3dp" app:fontPath="fonts/OpenSans-Regular.otf"/>
    <android.support.v7.widget.RecyclerView android:id="@+id/F06_05_LST_COMPANIAS" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/F06_05_BTN_ESCANEAR" android:layout_below="@+id/search_separator"/>
    <Button android:enabled="true" android:id="@+id/F06_05_BTN_ESCANEAR" android:text="@string/IDX52_PAGO_SERVICIO_BTN_ESCANEAR_CODIGO" android:layout_alignParentBottom="true" android:textAllCaps="false" style="@style/generic_boton_rojo"/>
</RelativeLayout>
