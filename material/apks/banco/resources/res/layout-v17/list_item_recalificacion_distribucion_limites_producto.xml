<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingTop="18dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/tvRecalificacionLimiteProductoNombre" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="18dp" style="@style/generic_list_data_column2"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/llLimiteActual" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="left" android:id="@+id/tvRecalificacionLimiteActualLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ID_4850_RECALIFICACION_LBL_NUEVO_LIMITE" android:layout_weight="0.5" style="@style/generic_list_data_column1"/>
            <TextView android:gravity="right" android:id="@+id/tvRecalificacionLimiteActualValue" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.5" android:importantForAccessibility="yes" style="@style/generic_list_data_column2"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/llLimiteDisponible" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">
            <TextView android:textColor="@color/black" android:gravity="left" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/ID_4851_RECALIFICACION_LBL_NUEVO_DISPONIBLE" android:layout_weight="0.5" style="@style/generic_list_data_column1"/>
            <TextView android:gravity="right" android:id="@+id/tvRecalificacionLimiteDisponibleValue" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.5" android:importantForAccessibility="yes" style="@style/generic_list_data_column2"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/sbLimites" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="16dp"/>
        <RelativeLayout android:id="@+id/rlMinimosMaximos" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="10dp">
            <TextView android:id="@+id/tvMinimos" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:importantForAccessibility="yes" android:layout_alignParentStart="true" style="@style/generic_small_leyend_recalificacion_grey"/>
            <TextView android:id="@+id/tvMaximos" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:importantForAccessibility="yes" android:layout_alignParentEnd="true" style="@style/generic_small_leyend_recalificacion_grey"/>
        </RelativeLayout>
        <TextView android:textSize="13sp" android:gravity="start" android:id="@+id/tvMsjDesc" android:paddingLeft="18dp" android:paddingRight="18dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" style="@style/generic_small_leyend_recalificacion"/>
    </LinearLayout>
    <View android:id="@+id/F27_00_ITEM_SEPARATOR_BOTTOM" style="@style/SeparatorListView"/>
</LinearLayout>
